<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tengol.springcloud.guigu.dao.mapper.PaymentMapper">
    <resultMap id="BaseResultMap" type="com.tengol.springcloud.guigu.entity.Payment">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="serial" jdbcType="VARCHAR" property="serial"/>
    </resultMap>

    <sql id="base_colum_list">
        id,serial
    </sql>

    <insert id="insert" parameterType="com.tengol.springcloud.guigu.entity.Payment"
            useGeneratedKeys="true" keyProperty="id">
        insert into payment(serial) values (#{serial,jdbcType=VARCHAR})
    </insert>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        select
            <include refid="base_colum_list"/>
        from payment
        where id=#{id,jdbcType=INTEGER}
    </select>

</mapper>